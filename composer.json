{
    "name": "szogyenyid/phocus",
    "description": "A lightweight router with one purpose: route. No dependencies, no mess.",
    "type": "library",
    "keywords": ["lightweight", "php", "router", "routing"],
    "homepage": "https://github.com/szogyenyid/phocus",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Szogyenyid\\Phocus\\": "src/",
            "Szogyenyid\\Phocus\\Tests\\": "tests/helpers/"
        }
    },
    "authors": [
        {
            "name": "szogyenyid",
            "email": "szogyenyid@gmail.com",
            "homepage": "https://szogyenyid.dev"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.13",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "pestphp/pest": "^2.6"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
